<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
        integrity="sha512-PgQMlq+nqFLV4ylk1gwUOgm6CtIIXkKwaIHp/PAIWHzig/lKZSEGKEysh0TCVbHJXCLN7WetD8TFecIky75ZfQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="css/style.css">
    <style>
        * {
            margin: 0px;
            padding: 0px;
        }

        .hero {
            width: 100%;
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .email-box,
        .contact-form {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form-head {
            margin-bottom: 20px;
        }

        .user,
        .email,
        .digit {
            width: 100%;
            height: 40px;
            display: flex;
            align-items: center;
            border-radius: 20px;
            padding: 0 15px;
            margin-bottom: 18px;
            box-sizing: border-box;
        }

        input {
            width: 100%;
            height: 100%;
            background: transparent;
            outline: none;

        }

        .fa {
            margin-right: 20px;
        }

        textarea,
        #btnsub {
            width: 100%;
            outline: none;
            border-radius: 20px;
        }

        textarea {
            padding: 12px 50px;
            margin-bottom: 40px;
        }

        #btnsub {
            background-color: #FFDEFA;
            padding: 7px 15px;
            font-size: 22px;
            font-weight: bold;
            cursor: pointer;
        }
    </style>

    <title>hireme.com</title>
</head>

<body>
    {{>navbar}}

    <div class="hero">
        <div class="email-box">
            <div class="contact-form">
                <form action="/contact" onsubmit="return validation()" method="POST">
                    <h1 class="form-head">Hire Me By Contacting Here</h1>
                    <div class="user">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        <input id="vname" type="text" placeholder="Enter Your Name" name="name" autocomplete="off">
                        <span id="valname" class="text-danger font-weight-bold"></span>
                    </div>
                    <div class="email">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                        <input id="vemail" type="email" name="email" placeholder="Enter Your Email" autocomplete="off">
                        <span id="valemail" class="text-danger font-weight-bold"></span>
                    </div>
                    <div class="digit">
                        <i class="fa fa-phone-square" aria-hidden="true"></i>
                        <input id="vnum" type="number" name="phone" placeholder="Enter Your Phone Number"
                            autocomplete="off">
                        <span id="valnum" class="text-danger font-weight-bold"></span>
                    </div>
                    <textarea name="msg" cols="30" rows="5"></textarea>
                    <button id="btnsub" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>

    {{>footer}}

    <script type="text/javascript">
        function validation() {
            var vname = document.getElementById('vname').value;
            var vemail = document.getElementById('vemail').value;
            var vnum = document.getElementById('vnum').value;

            if (vname == "") {
                document.getElementById("valname").innerHTML = "!Please Fill Your Name";
                return false;
            }
            if ((vname.length <= 2) || (vname.length > 30)) {
                document.getElementById("valname").innerHTML = "!Length Of Name Must Be Between 2 and 30";
                return false;
            }
            if (!isNaN(vname)) {
                document.getElementById("valname").innerHTML = "!Numbers Not Allowed";
                return false;
            }

            if (vemail == "") {
                document.getElementById("valemail").innerHTML = "!Please Fill Your email";
                return false;
            }
            if (vemail.indexOf('@') <= 0) {
                document.getElementById("valemail").innerHTML = "!Invalid Email";
                return false;
            }
            if ((vemail.charAt(vemail.length - 4) != '.') && (vemail.charAt(vemail.length - 3) != '.')){
                document.getElementById("valemail").innerHTML = "!Invalid Email";
                return false;
            }

            if (vnum == "") {
                document.getElementById("valnum").innerHTML = "!Please Fill Your Phone Number";
                return false;
            }
            if (vnum.length != 10) {
                document.getElementById("valnum").innerHTML = "!Phone Number Must Be Of 10 Digits";
                return false;
            }
        }
    </script>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

