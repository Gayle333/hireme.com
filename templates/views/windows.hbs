<body>
    {{>navbar}}

    <div class="container">
        <div class="taskbar">
            
            <img src="images/icons.jpg" alt="">
            <img class="right" src="images/down.png" alt="">
        </div>
        <div class="startmenu">
            <img src="images/startmenu.PNG" alt="">
        </div>
        <video autoplay muted>
            <source src="video.webm" type="video/webm">
        </video>
    </div>
</body>

<!-- Optional JavaScript; choose one of the two! -->

